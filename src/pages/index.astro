---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import MainBannerCard from "../components/main-banner/Card.astro";
---

<Layout title="Welcome to Astro.">
  <section class="first-section">
    <Navbar />

    <section class="main-banner-wrapper">
      <div class="main-banner">
        <div class="main-post">
          <MainBannerCard src="featured-guitarman.jpg.webp" />
        </div>
        <div>
          <MainBannerCard src="featured-watch.jpg.webp" />
        </div>
        <div class="hidden md:block">
          <MainBannerCard src="featured-beetle.jpg.webp" />
        </div>
      </div>
    </section>

  </section>
</Layout>

<style lang="scss">
  .first-section {
    @apply bg-black min-h-screen flex flex-col justify-between;
  }

  .main-banner-wrapper {
    @apply container mx-auto flex-1 flex pt-10 px-5 md:pt-20 md:px-20;

    .main-banner {
      @apply grid md:grid-rows-2 md:grid-cols-3 gap-0 w-full;

      .main-post {
        @apply md:col-span-2 md:row-span-2;
      }
    }
  }
</style>
